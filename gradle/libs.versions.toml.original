shadowPlugin = "8.1.7"
spotlessChangelogPlugin = "2.4.0"
spotlessPlugin = "6.5.2"
versionsPlugin = "0.51.0"
# libraries
clikt = "4.4.0"
jna = "5.13.0"
junit = "5.10.2"
kaml = "0.55.0"
korlibs = "2.7.0"
